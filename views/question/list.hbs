<h1 class="mb-4">Vprašanja:</h1>
{{#each questions}}
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Naslov: {{title}}</h5>
            <p class="card-text"><b>Opis:</b> {{description}}</p>
            <p class="card-text"><b>Oznake:</b> {{tags}}</p>
            <p class="card-text"><b>Datum objave:</b> {{date}}</p>
            <b>Objavil:</b> <span>{{postedBy.username}}</span>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary mr-2"><a href='/questions/{{_id}}' class="text-white">Preberi več</a></button>
            <button class="btn btn-danger" onclick="zbrisiVprasanje('{{_id}}')">Izbriši</button>
        </div>
    </div>
{{/each}}

<script>
    function zbrisiVprasanje(id) {

        const data = {
            id: id,
        };

        fetch("/questions/delete/" + id, {
            method: "DELETE",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
        }).then(location.reload());
    }
</script>